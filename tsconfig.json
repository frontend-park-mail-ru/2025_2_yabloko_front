{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": ".",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"jsxFactory": "h",
		"jsxFragmentFactory": "hFragment",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*", "framework/**/*", "types/**/*", "src/utils/global.d.ts"],
	"exclude": ["node_modules", "dist"]
}
