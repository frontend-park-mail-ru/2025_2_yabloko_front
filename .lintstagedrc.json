{
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --config eslint.config.mjs --fix",
			"npm run type-check",
			"npm run build",
			"git add"
		],
		"*.{js,jsx,mjs,cjs}": [
			"eslint --config eslint.config.mjs --fix",
			"git add"
		],
		"*.{md,json,yml,yaml}": ["prettier --write", "git add"]
	}
}
